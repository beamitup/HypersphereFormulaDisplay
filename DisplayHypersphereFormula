import math

def hypersphere_volume_formula(dimensions):
    if dimensions < 1:
        return "Dimension must be a positive integer."
    
    if dimensions == 1:
        return "2"
    elif dimensions == 2:
        return "π"
    else:
        volume_formula = f"π^({dimensions // 2}) / ({dimensions // 2})!" if dimensions % 2 == 0 else f"2 * (2π)^({(dimensions - 1) // 2}) / {(dimensions - 1) // 2}!"
        return volume_formula

# Input: number of dimensions
dimensions = int(input("Enter the number of dimensions: "))
formula = hypersphere_volume_formula(dimensions)
print(f"The volume formula for a hypersphere in {dimensions} dimensions with radius 1 is: {formula}")
